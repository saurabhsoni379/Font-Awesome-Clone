pipeline {
           environment {
        DOCKER_IMAGE = "saurabhsoni274/react-app:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('dockerHub_cred')
      }
    agent{
         docker{
             image 'node:18-alpine'
           args '-v /var/run/docker.sock:/var/run/docker.sock'
         }
}

    stages {
        stage('checkout') {
            steps {
                sh 'echo hello'
                git branch: 'main' , url:'https://github.com/saurabhsoni379/Font-Awesome-Clone.git'
            }
        }
        stage('build'){
      
            steps{
                sh '''
                cd  Font-Awesome-Clone 
                docker build  -t  ${DOCKER_IMAGE} .
                '''
            }
        }
        
        stage('push to docker hub'){
            steps{
                sh '''
                withCredentials([usernamePassword(credentialsId: 'dockerHub_cred', passwordVariable: 'pass', usernameVariable: 'user')]) {
                sh "docker login -u ${env.user} -p ${env.pass}"
                sh 'docker push ${DOCKER_IMAGE}'
}
                '''
            }
        }
        stage('container up'){
            steps{
                sh '''
                 cd Font-Awesome-Clone 
                 export $1=${BUILD_NUMBER}
                envsubst > docker-compose.yml
                 docker-compose  up 
                '''
            }
        }
    }
}
