pipeline {
           environment {
        DOCKER_IMAGE = "saurabhsoni274/react-app:${BUILD_NUMBER}"
        REGISTRY_CREDENTIALS = credentials('dockerHub_cred')
      }
    agent any

    stages {
        stage('checkout') {
            steps {
                sh 'echo hello'
                git branch: 'main' , url:'https://github.com/saurabhsoni379/Font-Awesome-Clone.git'
            }
        }
        stage('build'){
      
            steps{
                sh '''
               
                docker build  -t  ${DOCKER_IMAGE} .
                '''
            }
        }
        
        stage('push to docker hub'){
            steps{
    script{
 docker.withRegistry('https://index.docker.io/v1/', 'dockerHub_cred') {
                sh "docker push ${DOCKER_IMAGE}"
            }
          }
 }
        }
        stage('container up'){
            steps{
                sh '''
                 export ver=${BUILD_NUMBER}
                envsubst < docker-compose.yml > docker-compose-temp.yml
                  docker compose -f docker-compose-temp.yml up -d
                '''
            }
        }
    }
 
 

 post {
        success {
            script {
                slackSend(channel: "jenkins", message: "my-first-pipeline-slack passed successfully")
            }
        }
    }
    
}
